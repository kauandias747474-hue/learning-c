#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
    int id;
    char segredo[50];
} Vault;

int main() {
    int n, i;
    Vault *cofres;

    printf("--- SISTEMA DE GERENCIAMENTO DE VAULT (HEAP) ---\n");
    printf("Quantos compartimentos deseja alocar no cofre? ");
    scanf("%d", &n);

    // Alocando memoria dinamicamente na HEAP
    cofres = (Vault*) malloc(n * sizeof(Vault));

    // Verificacao de Seguranca (Regra de Ouro)
    if (cofres == NULL) {
        printf("Erro critico: Memoria insuficiente para o Vault!\n");
        return 1;
    }

    // Preenchendo os compartimentos
    for (i = 0; i < n; i++) {
        cofres[i].id = i + 1;
        sprintf(cofres[i].segredo, "DADO_SECRETO_%d", (i + 1) * 7);
        printf("Vault %d alocado em: %p\n", cofres[i].id, (void*)&cofres[i]);
    }

    printf("\nDados gravados com sucesso na HEAP.\n");

    // LIBERACAO: Evitando Memory Leak
    free(cofres);
    cofres = NULL; 

    printf("Memoria do Vault liberada. Sistema seguro.\n");
    
    system("pause");
    return 0;
}
